    "@angular/platform-browser-dynamic": "^20.3.9",
    "@angular/router": "^20.3.9",
    "@babel/preset-typescript": "^7.27.1",
    "@ngx-translate/core": "^17.0.0",
    "@opengovsg/credits-generator": "^1.0.7",
    "@popperjs/core": "^2.11.8",
    "@types/adm-zip": "^0.5.5",
    "@types/bcrypt": "^6.0.0",
