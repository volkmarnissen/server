{
  "name": "modbus2mqtt",
  "version": "0.17.2",
  "sshserver": "homeassistant@homeassistant.lan",
  "homepage": "https://github.com/modbus2mqtt/server/README.md",
  "description": "server for modbus2mqtt for REST API of configuration and publishing modbus values to mqtt",
  "keywords": [
    "modbus2mqtt",
    "specification",
    "validation"
  ],
  "bugs": "https://github.com/modbus2mqtt/server/issues",
  "type": "commonjs",
  "bin": {
    "modbus2mqtt": "bin/modbus2mqtt"
  },
  "author": "Volkmar Nissen <volkmar.nissen@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=22.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/modbus2mqtt/server.git"
  },
  "credits": "multiple choice by Studio 365 from <a href='https://thenounproject.com/browse/icons/term/multiple-choice/' target='_blank' title='multiple choice Icons'>Noun Project</a> (CC BY 3.0)",
  "scripts": {
    "ng": "npx ng",
    "test": "jest",
    "cypress": "TS_NODE_PROJECT=angular/tsconfig.angular.json ;CYPRESS_REMOTE_DEBUGGING_PORT=9222; npx cypress",
    "cypress:open": "npm run cypress -- open",
    "cypress:component": "npm run cypress -- run --component",
    "server": "npm run build && node dist/modbus2mqtt.js -s ../ssl -y ../yaml-dir",
    "e2e:start": "npm run build.dev && ./cypress/servers/testall.py startServers",
    "e2e:restart": "npm run build.dev && ./cypress/servers/testall.py restartServers",
    "e2e:stop": "./cypress/servers/testall.py killServers",
    "e2e:test": "npm run build.dev && ./cypress/servers/testall.py test",
    "e2e:server.debug.ingress": "npm run e2e:end.debug && mkdir -p  'e2e/modbus2mqtt.temp/modbus2mqtt' && echo 'httpport: 3004\nsupervisor_host: localhost:3006' >e2e/modbus2mqtt.temp/modbus2mqtt/modbus2mqtt.yaml && npm run build.dev ",
    "e2e:server.debug": "npm run e2e:end.debug && mkdir -p  'e2e/modbus2mqtt.temp/modbus2mqtt' && echo 'httpport: 3005' >e2e/modbus2mqtt.temp/modbus2mqtt/modbus2mqtt.yaml && npm run build.dev ",
    "e2e:end.debug": "rm -rf 'e2e/modbus2mqtt.temp'",
    "build.dev": "tsc -p tsconfig.json && ng build --configuration development",
    "build": "tsc -p tsconfig.json && ng build --configuration production && npx @opengovsg/credits-generator",
    "prettier": "./scripts/prettier-changed.sh",
    "install-hooks": "git config core.hooksPath .githooks && chmod +x .githooks/* || true && echo 'Git hooks configured to use .githooks directory'"
  },
  "dependencies": {
    "@octokit/rest": "^20.1.1",
    "adm-zip": "^0.5.16",
    "assert": "^2.1.0",
    "async-mutex": "^0.5.0",
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.0",
    "bootstrap": "^5.3.3",
    "commander": "^14.0.2",
    "cors": "^2.8.5",
    "debug": "^4.3.6",
    "express": "^5.0.1",
    "express-fileupload": "^1.5.1",
    "http-server": "^14.1.1",
    "jsonwebtoken": "^9.0.2",
    "modbus-serial": "^8.0.17",
    "mqtt": "^5.9.1",
    "multer": "^2.0.2",
    "node-html-parser": "^7.0.1",
    "rxjs": "^7.8.2",
    "serve-static": "^2.2.0",
    "url-parse": "^1.5.10",
    "winston": "^3.18.3",
    "yaml": "^2.5.0"
  },
