{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python-Debugger: Aktuelle Datei mit Argumenten",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": ["--componentdir", "modbus2mqtt.latest/docker/rootfs/usr/app"],
      "cwd": "${workspaceFolder}/../modbus2mqtt.dev/hassio-addon-repository"
    },

    {
      "name": "Run Server",
      "preLaunchTask": "npm: prepare",
      "timeout": 10000,
      "program": "${workspaceFolder}/dist/server/modbus2mqtt.js",
      "args": ["-s", "../ssl", "-y", "../yaml-dir"],
      "console": "integratedTerminal",
      "env": {
        "DEBUG": "",
        "NODE_OPTIONS": "--experimental-vm-modules npx jest"
      },
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "type": "node"
    },
    {
      "name": "Run TCP Bridge",
      "preLaunchTask": "npm: build.dev",
      "timeout": 10000,
      "program": "${workspaceFolder}/dist/modbus2mqtt.js",
      "args": ["-s", "../ssl", "-y", "../yaml-dir-bridge"],
      "console": "integratedTerminal",
      "env": {
        "DEBUG": "",
        "NODE_OPTIONS": "--experimental-vm-modules npx jest"
      },
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "type": "node"
    },
    {
      "name": "Test ModbusRTU",
      "timeout": 10000,
      "program": "${workspaceFolder}/__tests__/testmodbus.js",
      "console": "integratedTerminal",
      "env": {
        "DEBUG": "",
        "NODE_OPTIONS": "--experimental-vm-modules npx jest"
      },
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "type": "node"
    },
    {
      "name": "Run Addon Service Server",
      "preLaunchTask": "npm: e2e:server.debug",
      "postDebugTask": "npm: e2e:end.debug",
      "timeout": 10000,
      "program": "${workspaceFolder}/dist/modbus2mqtt.js",
      "args": ["-y", "${workspaceFolder}/e2e/modbus2mqtt.temp", "-s", "${workspaceFolder}/e2e/modbus2mqtt.temp"],
      "console": "integratedTerminal",
      "env": {
        "HASSIO_TOKEN": "abcd1234",
        "DEBUG": "httpserver,HttpServerBaseUrl",
        "NODE_OPTIONS": "--experimental-vm-modules npx jest"
      },
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "type": "node"
    },
    {
      "name": "Run Server TCP",
      "preLaunchTask": "npm: build.dev",
      "timeout": 10000,
      "program": "${workspaceFolder}/dist/runModbusTCPserver.js",
      "args": ["-y", "cypress/servers/modbustcp.conf/yaml-dir", "--busid", "0"],
      "console": "integratedTerminal",
      "env": {
        "DEBUG": "config",
        "NODE_OPTIONS": "--experimental-vm-modules npx jest"
      },
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "type": "node"
    },
    {
      "name": "Run TestServer TCP",
      "preLaunchTask": "npm: build.dev",
      "timeout": 10000,
      "program": "${workspaceFolder}/dist/runModbusTCPserver.js",
      "args": [
        "-s",
        "${workspaceFolder}/e2e/temp/ssl",
        "-y",
        "${workspaceFolder}/e2e/temp/yaml-dir",
        "--busid",
        "${workspaceFolder}/e2e/temp/yaml-dir-tcp:0"
      ],
      "console": "integratedTerminal",
      "env": {
        "DEBUG": "config",
        "NODE_OPTIONS": "--experimental-vm-modules npx jest"
      },
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "type": "node"
    },

    {
      "name": "Attach to homeassistant(local)",
      "address": "homeassistant.lan",
      "localRoot": "${workspaceFolder}/..",
      "port": 9229,
      "remoteRoot": "/usr/app/node_modules/@modbus2mqtt",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "server/*/*": "${workspaceFolder}/*",
        "specification.shared/*/*": "${workspaceFolder}../specification.shared/*/*",
        "server.shared/*/*": "${workspaceFolder}../server.shared/*/*",
        "specification/*/*": "${workspaceFolder}../specification/*/*"
      },
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "remoteRoot": "/usr/app/node_modules/@modbus2mqtt/server/dist/",
      "localRoot": "${workspaceFolder}/dist",
      "port": 9229,
      "address": "localhost"
    },

    {
      "type": "node",
      "name": "vscode-jest-tests.v2",
      "sourceMaps": true,
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "env": {
        "DEBUG": "httpserver",
        "NODE_OPTIONS": "--experimental-vm-modules npx jest"
      },
      "args": [
        "--runInBand",
        "--detectOpenHandles",
        "--watchAll=false",
        "--testNamePattern",
        "${jest.testNamePattern}",
        "--runTestsByPath",
        "${jest.testFile}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
